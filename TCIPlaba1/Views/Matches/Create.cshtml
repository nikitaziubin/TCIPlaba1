@model TCIPlaba1.NewFolder.MatchAndParticipantsVM

@{
    ViewData["Title"] = "Create";
}

<h1>Add match properties</h1>
<p>
    <a asp-action="CreateM" asp-controller="Matches">Create New match</a>
</p>
<h1>Add participant properties</h1>
<p>
    <a asp-action="Create" asp-controller="Participants">Create New Participant</a>
</p>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="match" class="control-label"></label>
                <input asp-for="match" class="form-control" />
                <span asp-validation-for="match" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="participant" class="control-label"></label>
                <input asp-for="participant" class="form-control" asp-items="ViewBag.match" />

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
