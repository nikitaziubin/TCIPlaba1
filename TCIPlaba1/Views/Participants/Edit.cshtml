@model TCIPlaba1.Models.Participant

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити параметри учасника</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Team" class="control-label">Назва команди</label>
                <select asp-for="Team" class="form-control" asp-items="ViewBag.Team"></select>
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamRole" class="control-label"></label>
                <select asp-for="TeamRole" class="form-control" asp-items="ViewBag.TeamRole"></select>
                <span asp-validation-for="TeamRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goals" class="control-label">Забиті голи</label>
                <input asp-for="Goals" class="form-control" />
                <span asp-validation-for="Goals" class="text-danger"></span>
            </div>
            <div>
                <button class="btn btn-primary" asp-action="Edit"></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
