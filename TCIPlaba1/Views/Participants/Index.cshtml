@model TCIPlaba1.NewFolder.MatchAndParticipantsVM

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().Goals)
				/th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().MatchNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().TeamNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().TeamRoleNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().Goals)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().MatchNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().TeamNavigation)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.participant.FirstOrDefault().TeamRoleNavigation)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.match)
		{
			<tr>
				@foreach (var participants in item.Participants)
				{
					<td>
						@Html.DisplayFor(modelItem => participants.Goals)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.MatchNavigation.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.TeamNavigation.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.TeamRoleNavigation.Id)
					</td>
				}
			<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
