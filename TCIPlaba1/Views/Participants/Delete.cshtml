@model TCIPlaba1.Models.Match
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Participant</h4>
	<hr />
	<table class="table">

		<tbody>

			<tr>
				@foreach (var participants in Model.Participants)
				{
					<td>
						@Html.DisplayFor(modelItem => participants.Goals)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.MatchNavigation.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.TeamNavigation.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => participants.TeamRoleNavigation.Id)
					</td>
				}
			</tr>

		</tbody>
	</table>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>
